<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <!-- CSSファイルの読み込み -->
    <link rel="stylesheet" href="style.css" />
    <title>webcamp_bookers_app</title>
  </head>

  <body>
    <%= flash[:notice] %>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |list| %>
        <tr>
        <td><%= list.title %></td>
        <td><%= list.body %></td>
        <td><%= link_to "Show", book_path(list) %></td>
        <td><%= link_to "Edit", edit_book_path(list) %></td>
　　　　<td><%= link_to "Destroy", book_path(list), method: :delete %></td>

        </tr>
        <% end %>
      </tbody>
    </table>
    <h2>New book</h2>
    
    <% if @book.errors.any? %>
      <%= @book.errors.count %>error prohibited this book from being saved:
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <!-- form_with部分 -->
    <%= form_with model: @book, local:true do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>
  </body>
</html>



